<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Travel Wishlist</title>
    <link rel="stylesheet" href="/index.css" />
    <script src="/script.js" defer></script>
  </head>

  <body>
    <main class="container">
      <h1>Travel Wishlist</h1>
      <nav class="nav-container">
        <div class="nav-links">
          <a href="/">All</a>
        </div>
        <div class="nav-links">
          <a href="?visited=true">Visited</a>
        </div>
        <div class="nav-links">
          <a href="?wishlist=true">Wishlist</a>
        </div>
        <button id="add-trip" class="add-trip">+ Add New Trip</button>
      </nav>

      <ul>
        <% countries.forEach(country=> {%>
        <li>
          <a href="/destination/<%= country.alpha2Code %>">
            <div
              class="card"
              style="background-image: url('<%= country.image %>')"
            >
              <div class="card-content">
                <h2><%= country.name %></h2>
                <p><%= country.visited ? 'Visited' : 'Next Trip' %></p>
              </div>
            </div>
          </a>
        </li>
        <% }); %>
      </ul>
    </main>
    <footer class="container footer">
      <p>Â© 2024 Travel Wishlist</p>
    </footer>
    <div class="modal">
      <div class="modal-content">
        <span class="close-button">&times;</span>
        <h2>Add New Trip</h2>
        <form class="form">
          <div>
            <label for="name">Country Name</label>
            <input type="text" id="name" name="name" required />
          </div>
          <button id="add-btn" type="submit">Add</button>
        </form>
      </div>
    </div>
  </body>
</html>

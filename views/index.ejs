<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Travel Wishlist</title>
    <link rel="stylesheet" href="/index.css" />
</head>

<body>
    <main class="container">
        <h1>Travel Wishlist</h1>
        <nav class="nav-container">
            <div class="nav-links">
                <a href="/">All</a>
            </div>
            <div class="nav-links">
                <a href="?visited=true">Visited</a>
            </div>
            <div class="nav-links">
                <a href="?wishlist=true">Wishlist</a>
            </div>
            <div class="nav-links">
                <a href="/destinations/add-trip">+ Add New Trip</a>
            </div>
        </nav>
        <ul>
            <% countries.forEach(country=> {%>
                <li>
                    <a href="/destination/<%= country.name %>">
                        <div class="card" style="background-image: url('<%= country.image %>')">
                            <div class="card-content">
                                <h2>
                                    <%= country.name %>
                                </h2>
                                <p>
                                    <%= country.visited ? 'Visited' : 'Next Trip' %>
                                </p>
                            </div>
                        </div>
                    </a>
                </li>
                <% }); %>
        </ul>
    </main>
</body>

</html>